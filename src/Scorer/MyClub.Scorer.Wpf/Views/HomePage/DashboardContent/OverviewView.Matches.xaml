<GroupBox x:Class="MyClub.Scorer.Wpf.Views.HomePage.DashboardContent.OverviewMatchesView"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:my="http://mynet.com/xaml/themes"
          xmlns:v="clr-namespace:MyClub.Scorer.Wpf.Views.RankingPage"
          xmlns:vm="clr-namespace:MyClub.Scorer.Wpf.ViewModels.HomePage.DashboardContent"
          Style="{StaticResource MyNet.Styles.GroupBox.Elevation}"
          d:DesignHeight="450"
          d:DesignWidth="800"
          mc:Ignorable="d">
    <GroupBox.Resources>
        <my:BindingProxy x:Key="RankingProxy" Data="{Binding}" />
    </GroupBox.Resources>

    <my:GhostControl GhostTemplate="{StaticResource Scorer.DataTemplates.Ghost.NoData.Medium}" ShowGhost="{Binding Items.Count, Converter={x:Static my:CountToBooleanConverter.NotAny}}">
        <ItemsControl ItemsSource="{Binding Items}" />
    </my:GhostControl>
</GroupBox>
