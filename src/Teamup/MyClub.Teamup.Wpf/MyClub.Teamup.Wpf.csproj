<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>1.0.0-alpha</Version>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net8.0-windows</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <AssemblyName>Teamup</AssemblyName>
    <ExtrasEnableWpfProjectSetup>true</ExtrasEnableWpfProjectSetup>
    <ApplicationIcon>Resources\Images\logo.ico</ApplicationIcon>
    <OutputPath>..\..\..\build\$(AssemblyName)\$(Configuration)</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Fody" Version="6.8.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.VisualStudio.SlowCheetah" Version="4.0.50">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="MyNet.Observable.Collections" Version="6.0.0-alpha.1" />
    <PackageReference Include="MyNet.UI" Version="4.7.0-alpha.4" />
    <PackageReference Include="PropertyChanged.Fody" Version="4.1.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.0-preview.7.24405.7" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="9.0.0-preview.7.24405.7" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="9.0.0-preview.7.24405.7" />
    <PackageReference Include="Microsoft.Extensions.Configuration.FileExtensions" Version="9.0.0-preview.7.24405.7" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.0-preview.7.24405.7" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.0-preview.7.24405.7" />
    <PackageReference Include="MyNet.Utilities.IO.FileHistory.Registry" Version="5.0.0-alpha" />
    <PackageReference Include="MyNet.Utilities.Logging.NLog" Version="5.0.0-alpha" />
    <PackageReference Include="MyNet.Utilities.Mail.MailKit" Version="5.0.0-alpha" />
    <PackageReference Include="MyNet.Observable.Statistics" Version="6.0.0-alpha.1" />
    <PackageReference Include="MyNet.CsvHelper.Extensions" Version="1.0.0" />
    <PackageReference Include="MyNet.Wpf.DragAndDrop" Version="6.0.0-alpha.6" />
    <PackageReference Include="MyNet.Wpf.LiveCharts" Version="6.0.0-alpha.6" />
    <PackageReference Include="MyNet.Wpf.Presentation" Version="6.0.0-alpha.6" />
    <PackageReference Include="MyNet.Wpf" Version="5.2.0-alpha.18" />
    <PackageReference Include="MyNet.Wpf.Web" Version="6.0.0-alpha.6" />
    <PackageReference Include="MyNet.Xaml.Merger.MSBuild" Version="2.0.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Common\MyClub.CrossCutting.FileSystem\MyClub.CrossCutting.FileSystem.csproj" />
    <ProjectReference Include="..\..\Common\MyClub.CrossCutting.Localization\MyClub.CrossCutting.Localization.csproj" />
    <ProjectReference Include="..\..\Common\MyClub.UserContext.Application\MyClub.UserContext.Application.csproj" />
    <ProjectReference Include="..\..\Common\MyClub.UserContext.Infrastructure.Authentication.Registry\MyClub.UserContext.Infrastructure.Authentication.Registry.csproj" />
    <ProjectReference Include="..\MyClub.Teamup.Application\MyClub.Teamup.Application.csproj" />
    <ProjectReference Include="..\MyClub.Teamup.Domain\MyClub.Teamup.Domain.csproj" />
    <ProjectReference Include="..\MyClub.Teamup.Infrastructure.Packaging\MyClub.Teamup.Infrastructure.Packaging.csproj" />
    <ProjectReference Include="..\MyClub.Teamup.Infrastructure.Repositories\MyClub.Teamup.Infrastructure.Repositories.csproj" />
    <ProjectReference Include="..\MyClub.Teamup.Plugins.Contracts\MyClub.Teamup.Plugins.Contracts.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="config\appsettings.json">
      <TransformOnBuild>true</TransformOnBuild>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="config\NLog.config">
      <TransformOnBuild>true</TransformOnBuild>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <None Update="config\appsettings.Debug.json">
      <IsTransformFile>true</IsTransformFile>
      <DependentUpon>appsettings.json</DependentUpon>
    </None>
    <None Update="config\appsettings.Release.json">
      <IsTransformFile>true</IsTransformFile>
      <DependentUpon>appsettings.json</DependentUpon>
    </None>
    <None Update="config\NLog.Release.config">
      <DependentUpon>NLog.config</DependentUpon>
      <IsTransformFile>true</IsTransformFile>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Images\artificialGrass.jpg" />
    <Resource Include="Resources\Images\background.png" />
    <Resource Include="Resources\Images\background2.png" />
    <Resource Include="Resources\Images\female.png" />
    <Resource Include="Resources\Images\Grass.jpg" />
    <Resource Include="Resources\Images\ground_3D.png" />
    <Resource Include="Resources\Images\Indoor.jpg" />
    <Resource Include="Resources\Images\male.png" />
    <Resource Include="Resources\Images\Sand.jpg" />
    <Resource Include="Resources\Images\logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Settings\ExportCompetitionsSettings.settings">
      <LastGenOutput>ExportCompetitionsSettings.Designer.cs</LastGenOutput>
      <Generator>SettingsSingleFileGenerator</Generator>
    </None>
    <None Update="Settings\ExportTeamsSettings.settings">
      <LastGenOutput>ExportTeamsSettings.Designer.cs</LastGenOutput>
      <Generator>SettingsSingleFileGenerator</Generator>
    </None>
    <None Update="Settings\ExportPlayersSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>ExportPlayersSettings.Designer.cs</LastGenOutput>
    </None>
    <None Update="Settings\LanguageSettings.settings">
      <LastGenOutput>LanguageSettings.Designer.cs</LastGenOutput>
      <Generator>SettingsSingleFileGenerator</Generator>
    </None>
    <None Update="Settings\AppSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>AppSettings.Designer.cs</LastGenOutput>
    </None>
    <None Update="Settings\ThemeSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>ThemeSettings.Designer.cs</LastGenOutput>
    </None>
    <Compile Update="Settings\ExportCompetitionsSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <DependentUpon>ExportCompetitionsSettings.settings</DependentUpon>
      <AutoGen>True</AutoGen>
    </Compile>
    <Compile Update="Settings\ExportTeamsSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <DependentUpon>ExportTeamsSettings.settings</DependentUpon>
      <AutoGen>True</AutoGen>
    </Compile>
    <Compile Update="Settings\LanguageSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <DependentUpon>LanguageSettings.settings</DependentUpon>
      <AutoGen>True</AutoGen>
    </Compile>
    <Compile Update="Settings\ExportPlayersSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>ExportPlayersSettings.settings</DependentUpon>
    </Compile>
    <Compile Update="Settings\AppSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>AppSettings.settings</DependentUpon>
    </Compile>
    <Compile Update="Settings\SmtpSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>SmtpSettings.settings</DependentUpon>
    </Compile>
    <Compile Update="Settings\ThemeSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>ThemeSettings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <PropertyGroup>
    <XAMLColorSchemeGeneratorEnabled>False</XAMLColorSchemeGeneratorEnabled>
    <XAMLCombineEnabled>True</XAMLCombineEnabled>
    <RemoveXAMLCombineItemsFromPages>False</RemoveXAMLCombineItemsFromPages>
  </PropertyGroup>

  <ItemGroup>
    <XAMLCombineItems Include="Styles/*.xaml">
      <TargetFile>Themes/Teamup.Styles.xaml</TargetFile>
      <ImportMergedResourceDictionaryReferences>True</ImportMergedResourceDictionaryReferences>
    </XAMLCombineItems>
  </ItemGroup>

  <PropertyGroup Condition="'$(IsBuildingInsideRider)' == 'True'">
    <DefaultItemExcludes>$(DefaultItemExcludes);Styles\*.xaml</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup Condition="'$(IsBuildingInsideRider)' == 'True'">
    <Page Include="Styles\*.xaml" />
  </ItemGroup>

</Project>
