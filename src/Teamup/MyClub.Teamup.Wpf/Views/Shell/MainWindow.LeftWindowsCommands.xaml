<mah:WindowCommands x:Class="MyClub.Teamup.Wpf.Views.Shell.LeftWindowsCommands"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:my="http://mynet.com/xaml/themes"
                    xmlns:v="clr-namespace:MyClub.Teamup.Wpf.Views.Shell"
                    xmlns:vm="clr-namespace:MyClub.Teamup.Wpf.ViewModels.Shell"
                    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
                    d:DesignHeight="450"
                    d:DesignWidth="800"
                    ShowSeparators="False"
                    mc:Ignorable="d">
    <mah:WindowCommands.Resources>
        <my:BindingProxy x:Key="Proxy" Data="{Binding}" />
    </mah:WindowCommands.Resources>

    <!--  File Menu Button  -->
    <ToggleButton Style="{StaticResource MyNet.Styles.ToggleButton.Text}"
                  Width="45"
                  Margin="-1 0 0 0"
                  VerticalAlignment="Stretch"
                  my:ThemeAssist.CornerRadius="0"
                  my:ThemeAssist.IsCheckedBackground="{DynamicResource MyNet.Brushes.Accent.Dark}"
                  my:ThemeAssist.IsCheckedForeground="{DynamicResource MyNet.Brushes.Accent.Dark.Foreground}"
                  Command="{Binding ToggleFileMenuCommand}"
                  Content="{my:MediumIcon Kind=Menu}"
                  IsChecked="{Binding FileMenuViewModel.IsVisible, Mode=OneWay}"
                  ToolTip="{my:ShortcutResource File,
                                                ShortcutKey='Alt+F'}" />

    <!--  Navigation Buttons  -->
    <StackPanel Margin="20 0 0 0" Orientation="Horizontal" Visibility="{Binding ShowNavigationControls, Converter={x:Static my:BooleanToVisibilityConverter.HiddenIfFalse}}">
        <Button Style="{StaticResource MyNet.Styles.Button.Text}"
                Command="{Binding GoBackCommand}"
                Content="{my:MediumIcon Kind=ArrowLeft}"
                ToolTip="{my:ShortcutResource PreviousPage,
                                              ShortcutKey=PageUp}" />
        <Button Style="{StaticResource MyNet.Styles.Button.Text}"
                Command="{Binding GoForwardCommand}"
                Content="{my:MediumIcon Kind=ArrowRight}"
                ToolTip="{my:ShortcutResource NextPage,
                                              ShortcutKey=PageDown}" />
    </StackPanel>

    <!--  Search  -->
    <v:SearchView Width="250"
                  Height="32"
                  Margin="{StaticResource MyNet.Margins.Medium.Left}"
                  DataContext="{Binding SearchViewModel}"
                  IsEnabled="{Binding Data.DialogService.OpenedDialogs.Count, Source={StaticResource Proxy}, Converter={x:Static my:CountToBooleanConverter.NotAny}}"
                  Visibility="{Binding Data.ShowNavigationControls, Source={StaticResource Proxy}, Converter={x:Static my:BooleanToVisibilityConverter.HiddenIfFalse}}" />
</mah:WindowCommands>
